{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "composite": true,
    "types": ["chrome-types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}